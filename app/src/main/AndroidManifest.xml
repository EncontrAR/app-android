<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ar.com.encontrarpersonas">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/general_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="ar.com.encontrarpersonas.App">

        <!-- Google Maps metadata -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <!-- Activity: Splash -->
        <activity
            android:name="ar.com.encontrarpersonas.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity: Main -->
        <activity
            android:name="ar.com.encontrarpersonas.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

    </application>
</manifest>
